<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rohitvyavahare.project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpForm" />
        <activity
            android:name=".AddEmployeeActivity"
            android:label="@string/title_activity_add_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlaceOrderActivity"
            android:label="@string/title_activity_place_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- <activity android:name=".LoginActivity"></activity> -->
        <activity android:name=".VerifyActivity" />
        <activity
            android:name=".OrderDetailsActivity"
            android:label="@string/title_activity_order_details"
            android:theme="@style/AppTheme.Detail" />
        <activity
            android:name=".InboxActivity"
            android:label="@string/title_activity_inbox"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateOrgActivity"
            android:label="@string/title_activity_create_org"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PairOrgActivity"
            android:label="@string/title_activity_pair_org"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PairOrgDetailsActivity" />
        <activity
            android:name=".OrdersActivity"
            android:label="@string/title_activity_orders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OutboxActivity"
            android:label="@string/title_activity_outbox"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchOrgActivity"
            android:label="@string/title_activity_search_org"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".FirebaseToken">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>