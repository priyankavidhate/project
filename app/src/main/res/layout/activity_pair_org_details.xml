<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_pair_org_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.rohitvyavahare.project.PairOrgDetailsActivity">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ProfilePic"
                android:layout_width="200sp"
                android:layout_height="150sp"
                android:clickable="false"
                android:src="@drawable/group_icon"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4sp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="10" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="250sp"
            android:stretchColumns="0,1">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:text="Name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgName"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:text="Tag"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Tag"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:text="Address"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgAddress"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:text="Country"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgCountry"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:text="State"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgState"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:text="City"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgCity"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:text="Zip"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgZip"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:text="Branch"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgBranch"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40sp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:text="Deparment"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/OrgDepartment"
                    android:layout_column="1"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/send_request_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="600sp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_send_request"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:background="#FE7E24"
                    android:padding="12dp"
                    android:text="Send Request"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="600sp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_accept"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="24sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="24sp"
                        android:background="#FE7E24"
                        android:padding="12sp"
                        android:text="Accept"
                        android:textColor="#ffffff" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_reject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="24sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="24sp"
                        android:background="#FE7E24"
                        android:padding="12sp"
                        android:text="Ignore"
                        android:textColor="#ffffff" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            </ViewSwitcher>

    </RelativeLayout>

</ScrollView>